<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.deba.elektouch.DeviceListActivity"
    tools:showIn="@layout/activity_devicepage"
    android:id="@+id/devicepageLayout"
    android:background="@drawable/main_header_selector">

    <Button
        android:text="LIGHTS"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/button_lights"
        android:background="@drawable/button_devices"
        android:elevation="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </Button>
    <Button
        android:text="FAN"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/button_fan"
        android:background="@drawable/button_devices"
        android:elevation="13dp"
        android:layout_below="@+id/button_lights"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </Button>
    <Button
        android:text="CHARGE"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/button_charge"
        android:background="@drawable/button_devices"
        android:elevation="13dp"
        android:layout_below="@+id/button_fan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </Button>
</RelativeLayout>