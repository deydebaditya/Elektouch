<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.deba.elektouch.DeviceListActivity"
    tools:showIn="@layout/activity_devicepage"
    android:id="@+id/devicepageLayout"
    android:background="@drawable/main_header_selector">

    <Button
        android:text="LIGHTS"
        android:textSize="30dp"
        android:textAlignment="gravity"
        android:gravity="end"
        android:paddingRight="80dp"
        android:layout_width="fill_parent"
        android:paddingTop="55dp"
        android:layout_height="140dp"
        android:id="@+id/button_lights"
        android:background="@drawable/button_devices"
        android:elevation="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </Button>
    <Button
        android:text="FAN"
        android:textSize="30dp"
        android:textAlignment="gravity"
        android:gravity="end"
        android:paddingTop="55dp"
        android:paddingRight="105dp"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/button_fan"
        android:background="@drawable/button_devices"
        android:elevation="13dp"
        android:layout_below="@+id/button_lights"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </Button>
    <Button
        android:text="SUMMON ELEK"
        android:textSize="30dp"
        android:textAlignment="gravity"
        android:gravity="end"
        android:paddingTop="55dp"
        android:paddingRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/button_ai"
        android:background="@drawable/button_devices"
        android:elevation="13dp"
        android:layout_below="@+id/button_fan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </Button>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/bulb"
        android:layout_alignStart="@+id/button_lights"
        android:layout_alignLeft="@+id/button_lights"
        android:id="@+id/imageViewLights" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/fan_icon"
        android:id="@+id/imageViewFan"
        android:layout_below="@+id/button_lights"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/ai"
        android:id="@+id/imageViewAI"
        android:layout_below="@+id/button_fan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>