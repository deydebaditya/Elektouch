<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_header_selector"
    tools:context="com.deba.elektouch.FansActivity">

    <TextView
        android:text="FAN CONTROLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView_fans"
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"/>

    <TextView
        android:text="State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_fans"
        android:layout_alignLeft="@+id/textView_fans"
        android:layout_alignStart="@+id/textView_fans"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="61dp"
        android:id="@+id/textView_state_fan"
        android:textSize="20dp"
        android:textColor="#f489f5" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_state_fan"
        android:layout_alignRight="@+id/textView_fans"
        android:id="@+id/switch_fans"
        android:textColor="#ffffff"
        android:hapticFeedbackEnabled="true"/>

    <SeekBar
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/regulator_fan"
        android:layout_below="@+id/switch_fans"
        android:layout_toRightOf="@+id/textView_regulator_fan"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:text="Regulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/textView_regulator_fan"
        android:textSize="20dp"
        android:textColor="#f489f5"
        android:layout_below="@+id/switch_fans"
        android:layout_alignLeft="@+id/textView_state_fan"
        android:layout_alignStart="@+id/textView_state_fan" />

</RelativeLayout>